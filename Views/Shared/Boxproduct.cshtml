
@model Product



    <div class="span4">
        <div class="product">
            <div class="product-img">
                <div class="picture">
                    <img src="/images/@(Model.Name).jpg" alt="" width="540" height="374" />
                    <div class="img-overlay">
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@(Model.Id)" class="btn more btn-primary">توضیحات بیشتر</a>
                        <a asp-action="AddToCart" asp-controller="Home"  asp-route-itemId="@Model.ItemId" class="btn buy btn-danger">اضافه به سبد خرید</a>
                    </div>
                </div>
            </div>
            <div class="main-titles no-margin">
                <h4 class="title">@(Model.Price)</h4>
                <h5 class="no-margin"> @(Model.Name) </h5>
            </div>
            <p class="desc">توضیحاتی که در مورد محصول لازم است را در اینجا مینویسید</p>
            <p class="center-align stars">
                <span class="icon-star stars-clr">> @(Model.Name) </span>
                <span class="icon-star stars-clr"></span>
                <span class="icon-star"></span>
                <span class="icon-star"></span>
                <span class="icon-star"></span>

            </p>
        </div>
    </div>

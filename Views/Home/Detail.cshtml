

@model DetailsViewModel
@{
    ViewData["Title"] = "کالا " + Model.Product.Name;
}

       
<div>
    <h1 class="display-5">@Model.Product.Name</h1>
    <hr />
    <img src="@($"/images/{Model.Product.Name}.jpg")" alt="@Model.Product.Name" class="img-thumbnail" />

    <hr /><hr />
    
    <div class="container">
        <p class="py-5 text-justify">@Model.Product.Description</p>
        <p>قیمت : @Model.Product.Price</p>
        <dl>
        </dl>
        <div>
            <a class="btn btn-primary"
               asp-controller="Home"
               asp-action="AddToCart"
       asp-route-itemId="@Model.Product.ItemId">افزودن به سبد خرید</a>
        </div>
    </div>
</div>

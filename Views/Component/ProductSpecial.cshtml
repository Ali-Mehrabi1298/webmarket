
@model IEnumerable<Product>


<div class="boxed-area blocks-spacer">
    <div class="container">

          @*==========  
          = Title =  
          ==========*@  
        <div class="row">
            <div class="span12">
                <div class="main-titles lined">
                    <h2 class="title">محصولات  فروشگاه ویژه</h2>
                </div>
            </div>
          
            <div class="row popup-products   blockquote">


                @foreach (var item in Model)
                {
                    <div class="span4">
                        <div class="product">
                            <div class="product-img">
                                <div class="picture">
                                    <img src="images/@(item.Name).jpg" alt="" width="540" height="374" />
                                    <div class="img-overlay">
                                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@(item.Id)" class="btn more btn-primary">توضیحات بیشتر</a>
                                        <a asp-action="AddToCart" asp-controller="Home" asp-route-itemId="@item.ItemId" class="btn buy btn-danger">اضافه به سبد خرید</a>
                                    </div>
                                </div>
                            </div>
                            <div class="main-titles no-margin">
                                <h5 class="no-margin">@(item.Name)</h5>
                                <h4 class="title">@(item.Price)</h4>

                            </div>
                            <p class="desc">  </p>
                            <p class="center-align stars">
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star"></span>
                                <span class="icon-star"></span>
                                <span class="icon-star"></span>

                            </p>
                        </div>
                    </div>


                }

            </div>
        </div>
    </div>

</div>

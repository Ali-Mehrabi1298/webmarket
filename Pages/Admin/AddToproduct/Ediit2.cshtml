@page
@model ShoppDJ.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row" style="margin-right:auto;background-color:lightcyan">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />

            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <hr />
            <p class="alert alert-warning" style="color:red">جهت قرار گرفتن در اسلاید اول عدد1 و برای  اسلاید دوم عدد2 را وارد نمایید</p>
            <div class="form-group">
                <label asp-for="Product.Number" class="control-label"></label>
                <input asp-for="Product.Number" class="form-control" placeholder="عدد برای اسلایدر" />
                <span asp-validation-for="Product.Number" class="text-danger"></span>
            </div>



            <hr />
            <hr />
            <div class="alert alert-info ">
                <p>اگر احتیاجی به تغییر ندارید می توانید از این موارد رد بشوید</p>
            </div>

            <div class="form-group">
                <label asp-for="Product.ItemId" class="control-label"></label>
                <input asp-for="Product.ItemId" class="form-control" />
                <span asp-validation-for="Product.ItemId" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>





            <div class="form-group">
                <input type="submit" value="ادامه" class="btn btn-success" />
            </div>



        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-page="./Index">بازگشت به صفحه</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


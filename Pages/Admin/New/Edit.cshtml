@page
@model ShoppDJ.Pages.Admin.New.EditModel

@{
    ViewData["Title"] = "Edit";
}



<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="News.Id" />
            <div class="form-group">
                <label asp-for="News.Titel" class="control-label"></label>
                <input asp-for="News.Titel" class="form-control" />
                <span asp-validation-for="News.Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.Description" class="control-label"></label>
                <input asp-for="News.Description" class="form-control" />
                <span asp-validation-for="News.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.DateTime" class="control-label"></label>
                <input asp-for="News.DateTime" class="form-control" />
                <span asp-validation-for="News.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-block" asp-page="Index">بازگشت به صفحه</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

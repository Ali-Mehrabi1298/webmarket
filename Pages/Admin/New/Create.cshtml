@page
@model ShoppDJ.Pages.Admin.New.CreateModel

@{
    ViewData["Title"] = "Create";
}



<h4>خبر</h4>
<hr />
<div class="row bg-light">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label @*asp-for="News.Titel"*@ class="control-label">تیترخبر</label>
                <input asp-for="News.Titel" class="form-control"  placeholder="Titel"/>
                <span asp-validation-for="News.Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label @*asp-for="News.Description"*@ class="control-label">خبر</label>
                <input asp-for="News.Description" class="form-control" placeholder="News" />
                <span asp-validation-for="News.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label @*asp-for="News.DateTime"*@ class="control-label">تاریخ</label>
                <input asp-for="News.DateTime" class="form-control" />
                <span asp-validation-for="News.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-block" asp-page="Index">بازگشت به صفحه</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
